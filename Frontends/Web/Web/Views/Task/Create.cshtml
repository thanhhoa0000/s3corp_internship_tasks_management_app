@model TaskItemDto
@{
    ViewData["Title"] = "Add task";
}
<form method="post" asp-controller="Task" asp-action="Create">
    @Html.AntiForgeryToken()
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Add task</h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Name" class="form-control" type="text" placeholder="Name..." />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Description" class="form-control" type="text" placeholder="Description..." />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Content" class="form-control" type="text" placeholder="Content..." />
                <span asp-validation-for="Content" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Create</button>
            </div>
        </div>

        <div class="row text-center pt-3">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark">Back to Home</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
